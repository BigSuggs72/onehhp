<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/style.css">
        <title>SIGNUP</title>
    </head>
    <body>
        <div class="page-layout">
            <header>
                <nav class="nav-list">
                    <a class="logo" href="/">
                        <img src="https://media.istockphoto.com/photos/red-dumbbell-weights-picture-id173926553?s=612x612"
                        alt="weights">
                    </a>
                    <span>BeActive</span>
                </nav>
            </header>
            <main>
                <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
                <% } %>
                <section class="signup" id="login-form">
                    <h1>Sign Up</h1>
                    <form id="signup-form" action="/signup" method="POST">
                        <input type="text" name="userName" placeholder="User Name">
                        <input type="email" name="email" placeholder="Email">
                        <input type="text" name="firstName" placeholder="First Name">
                        <input type="text" name="lastName" placeholder="Last Name">
                        <input type="password" name="password" placeholder="Password">
                        <input type="password" name="confirmPassword" placeholder="Confirm Password">
                        <input class="btn-submit btn-primary" type="submit">
                    </form>
                </section>
            </main>
        </div>
    </body>
</html>