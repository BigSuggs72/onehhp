<%- include('partials/header') -%>
    <div class="container card-container">
        <div class="row justify-content-center mt-5">
            <div class="col-6">
                <h2>
                    <%= exercise.name %>
                </h2>
                <img class="img-fluid" src="<%= exercise.image%>" />
                <div class="row justify-content-between mt-2">
                    <!-- <form class="col-1" action="/exercise/likePost/<%= exercise.id %>?_method=PUT" method="POST">
                        <button class="btn btn-primary fa fa-heart" type="submit"></button>
                    </form> -->
                    <!-- <h3 class="col-3">Likes: <%= exercise.likes %>
                    </h3> -->
                    <%if(exercise.user == user.id){ %>
                        <form action="/exercise/deleteExercise/<%= exercise.id %>?_method=DELETE" 
                              method="POST" 
                              class="col-3">
                            <button class="btn btn-primary fa fa-trash p-2" type="submit"></button>
                        </form>
                        <%}%>
                </div>
            </div class="col-6">
                <div class="col-md-6">
                    <h3 class="display-4">Instructions:</h3>
                    <h2>Notes:</h2>
                    <hr class="style1">
                    <ul class="list-unstyled">
                        <% for(var i=0; i<exercise.length; i++) {%>
                            <li class="p-1 g-2">
                                <%= exercise.notes[i] %>
                            </li>
                            <% } %>
                    </ul>
                    <h2>Instructions:</h2>
                    <hr class="style1">
                    <ol class="list-group list-group-numbered">
                        <% for(var i=0; i<exercise.length; i++) {%>
                            <li class="p-1">
                                <%= exercise.instructions[i] %>
                            </li>
                            <% } %>
                    </ol>
                </div>


                <!-- <div class="col-6 mt-5">
                    <a class="btn btn-primary" href="/profile">Return to Profile</a>
                    <a class="btn btn-primary" href="/catalog">Return to Catalog</a>
                </div> -->
            </div>
                    
        </div>
        <!-- <%- include('partials/footer') -%> -->