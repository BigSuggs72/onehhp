<%- include('partials/header') -%>
    <div class="container card-container">
        <div class="row justify-content-center mt-5">
            <h2>
                <%= exercise.name %>
            </h2>
            <p>
                <%= exercise.notes %>
            </p>
            <div class="col-6">
                <img class="img-fluid" src="<%= exercise.image%>" />
                <div class="row justify-content-between mt-2">
                        <form class="col-1" action="/exercise/editExercise/<%= exercise.id %>?_method=PUT" method="POST">
                        <button class="btn btn-primary fa fa-edit p-2" type="submit"></button>
                    </form>
                    <h3 class="col-3">: Edit</h3>
                    <%if(exercise.user == user.id){ %>
                        <form action="/exercise/deleteExercise/<%= exercise.id %>?_method=DELETE" 
                              method="POST" 
                              class="col-3">
                            <button class="btn btn-primary fa fa-trash p-2" type="submit"></button>
                        </form>
                        <%}%>
                </div>
            </div class="col-6">
                <div class="col-md-6">
                    <h3 class="display-4">Instructions:</h3>
                    <hr class="style1">
                    <ol class="list-group list-group-numbered rounded">
                        <li class="list-group-items p-1">
                            <%= exercise.instructions %>
                        </li>
                    </ol>
                </div>
            </div>
                    
        </div>
        <!-- <%- include('partials/footer') -%> -->